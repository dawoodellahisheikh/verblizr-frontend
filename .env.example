# Environment Configuration for Verblizr
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Backend API Base URL
API_BASE_URL_DEV=http://localhost:4000
API_BASE_URL_PROD=https://your-prod-api.example.com

# WebSocket URLs for real-time audio processing
WS_URL_DEV=ws://localhost:8082
WS_URL_PROD=wss://your-prod-ws.example.com

# Static file server for session files
HTTP_BASE_DEV=http://localhost:8083
HTTP_BASE_PROD=https://your-prod-files.example.com

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================

# Stripe Publishable Keys (safe for client-side)
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_51RuZcMF1SXqiudm2W8Jsq2WGbCNziUiUW46Ls5rinv7Lcr2E3BjZrHJKWfTLJkfm28th7ZRDnWzUdJjL9sBtcxqE00VMMozFFQ
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_...

# Stripe Configuration
STRIPE_MERCHANT_ID=merchant.com.yourcompany.verblizr
STRIPE_COUNTRY_CODE=US
STRIPE_CURRENCY=USD

# =============================================================================
# BACKEND SERVICE CONFIGURATION
# =============================================================================

# ⚠️  SECURITY NOTICE: All API keys should be stored on the backend server
# The frontend should NEVER contain real API keys or secrets
# These are just feature flags and UI configuration

# Backend API endpoint (where all external API calls are routed)
BACKEND_API_URL=http://localhost:4000/api
BACKEND_WS_URL=ws://localhost:8082

# Service feature flags (frontend configuration only)
ENABLE_OPENAI_SERVICES=true
ENABLE_GCP_SERVICES=true
ENABLE_TTS_SERVICES=true
ENABLE_FALLBACK_TTS=true

# UI Configuration
DEFAULT_LANGUAGE=en
MAX_AUDIO_DURATION_MINUTES=10
MAX_TEXT_LENGTH=5000

# =============================================================================
# BACKEND-MANAGED SERVICES (Configuration Only)
# =============================================================================

# ⚠️  All GCP credentials and API keys are managed by the backend
# These are just UI preferences and feature flags

# Service preferences (backend will use these as defaults)
PREFERRED_TTS_PROVIDER=google-cloud-tts
PREFERRED_STT_PROVIDER=openai-whisper
PREFERRED_TRANSLATION_PROVIDER=openai-gpt

# Default voice preferences (backend will map to actual voice IDs)
DEFAULT_VOICE_EN=neural-female
DEFAULT_VOICE_UR=standard-male
DEFAULT_VOICE_AR=standard-female

# Audio quality preferences
PREFERRED_AUDIO_FORMAT=mp3
PREFERRED_SAMPLE_RATE=22050
PREFERRED_AUDIO_ENCODING=MP3

# Session management
SESSION_AUTO_SAVE=true
SESSION_CLOUD_BACKUP=true
SESSION_RETENTION_DAYS=30

# Google Pay Configuration
GOOGLE_PAY_MERCHANT_ID=your-merchant-id
GOOGLE_PAY_MERCHANT_NAME=Verblizr
GOOGLE_PAY_ENVIRONMENT=TEST

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_INTERPRETED_PLAYBACK=true
FEATURE_TRANSCRIPT_MODAL=true
FEATURE_SPEED_TESTS=true
FEATURE_AUTO_LID=true
FEATURE_SESSION_ARCHIVING=true
FEATURE_EMAIL_DELIVERY=true
FEATURE_CLOUD_UPLOAD=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
AMPLITUDE_API_KEY=your-amplitude-key
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# EMAIL CONFIGURATION (Backend)
# =============================================================================

# Email service for session delivery
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@verblizr.com
# FROM_NAME=Verblizr

# =============================================================================
# SECURITY
# =============================================================================

# JWT Configuration (Backend)
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_SESSION_DURATION_MINUTES=60
MAX_FILE_SIZE_MB=100

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development flags
DEBUG_API_CALLS=true
DEBUG_WEBSOCKET=true
DEBUG_AUDIO_PROCESSING=false
LOG_LEVEL=info

# Mock data for development
USE_MOCK_PAYMENT_METHODS=false
USE_MOCK_SESSIONS=false
USE_MOCK_TRANSLATIONS=false